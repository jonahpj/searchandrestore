#search-by-name
  - form_for :blah do |f|
    %fieldset
      = f.label :name, 'Search Artists By ...', :class => 'box dark floatleft mr10 pr10 pl10'
      .field.select.inline.mb5
        = f.label :name, 'Name:'
        .wrapper
          = f.select :name, ['one','two','three']
      = f.submit :submit
#search-by-instrument
  - form_for :blah do |f|
    %fieldset
      .field.select.inline.mb5
        = f.label :instrument, 'Instrument:'
        .wrapper
          = f.select :instrument, ['one','two','three']
      = f.submit :submit
