%html
  %head
    %title Searchandrestore
    = stylesheet_link_tag 'base'
    = csrf_meta_tag

  %body
  
    - if flash[:notice]
      .flash#notice
        = flash[:notice]

    - if flash[:alert]
      .flash#alert
        = flash[:alert]
    

    .masthead
      .site-container
        = image_tag('logo.png', :alt => 'Search and Restore', :id => 'logo')
        Blah
    .site-container
      = yield

    = javascript_include_tag ['jquery-5.1.min.js']
  
