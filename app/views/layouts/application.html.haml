!!!
%html
  %head
    %title Searchandrestore
    = stylesheet_link_tag 'base'
    = csrf_meta_tag

  %body
  
    - if flash[:notice]
      .flash#notice
        = flash[:notice]

    - if flash[:alert]
      .flash#alert
        = flash[:alert]
    

    .masthead
      .site-container.container-12
        .masthead-top
          = image_tag('logo.png', :alt => 'Search and Restore', :id => 'logo')
        %ul.nav
          %li
            %a{:href => '#'} Home
          %li.selected
            %a{:href => '#'} Shows
          %li
            %a{:href => '#'} Artists
          %li
            %a{:href => '#'} Venues
          %li
            %a{:href => '#'} Video
          %li
            %a{:href => '#'} About
          %li
            %a{:href => '#'} Resources
          %li
            %a{:href => '#'} Donate
    .site-container.container-12
      = yield

    = javascript_include_tag ['jquery-5.1.min.js']
  
